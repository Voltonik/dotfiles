{
	"monitors": {
		"left": "HDMI-A-1",
		"right": "DP-1"
	},
	"workspaces": [
		{ "id": 1, "name": "Web",    "monitor": "left",  "layout": "master", "icon": "" },
		{ "id": 2, "name": "Game",   "monitor": "left",  "layout": "master", "icon": "" },
		{ "id": 3, "name": "Unity",  "monitor": "right", "layout": "master", "icon": "" },
		{ "id": 4, "name": "Code",   "monitor": "right", "layout": "master", "icon": "" },
		{ "id": 5, "name": "Altweb", "monitor": "right", "layout": "master", "icon": "" }
	],
	"autoassign": {
		"windowrules": {
			"2": ["class:^steam$", "class:^net\\.lutris\\.Lutris$"],
			"3": ["class:^unity$", "class:^unityhub$"],
			"4": ["class:^Code$"]
		}
	},
	"binds": [
		"bind = $mainMod ALT, 1, exec, ~/.config/hypr/config/sessions/session-spawn.sh \"thorium-browser\" \"thorium-browser\" 1 5",
		"bind = $mainMod ALT, 2, exec, ~/.config/hypr/config/sessions/session-gaming.sh",
		"bind = $mainMod ALT, 3, exec, ~/.config/hypr/config/sessions/session-dev.sh",
		"bind = $mainMod ALT, 4, exec, ~/.config/hypr/config/sessions/session-spawn.sh \"vesktop\" \"Vesktop\" 1 5"
	]
}